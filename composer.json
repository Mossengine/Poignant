{
  "name": "mossengine/poignant",
  "type": "library",
  "description": "PHP Class to provide quick validation building and execution logic based on validation results.",
  "keywords": [
    "validation",
    "build",
    "rules",
    "valid",
    "invalid",
    "data"
  ],
  "homepage": "https://github.com/Mossengine/Poignant",
  "support": {
    "issues": "https://github.com/Mossengine/Poignant/issues",
    "source": "https://github.com/Mossengine/Poignant"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Brendon Moss",
      "email": "brenmoss@mossengine.com"
    }
  ],
  "require": {
    "php": ">=5.3.0",
    "ramsey/uuid": "^3.4.1",
    "illuminate/support": "^5.2.32"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "~2",
    "phpunit/phpunit": "~4.0 || ~5.0"
  },
  "autoload": {
    "psr-4": {
      "Mossengine\\Poignant\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs"
    ],
    "phpunit": "phpunit",
    "phpcs": "php-cs-fixer fix -v --diff --dry-run"
  }
}
